global:
  scrape_interval: 20s

scrape_configs:
  # Prometheus scrapes itself
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  # Prometheus scrapes the Node Exporter running on the host
  - job_name: 'node-exporter'
    static_configs:
      - targets: ['node-exporter:9100']